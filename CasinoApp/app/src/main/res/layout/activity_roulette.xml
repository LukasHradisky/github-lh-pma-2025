<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B5E20"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarRoulette"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1B5E20"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:title="Ruleta"
        app:titleTextColor="#FFD700" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvRouletteBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konto: 0 Kč"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/etBetAmount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Sázka (Kč)"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/etBetNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Číslo (0-36)"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btnBetNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="VSADIT NA ČÍSLO"
                android:backgroundTint="#FF9800" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <Button android:id="@+id/btnBetRed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ČERVENÁ" android:backgroundTint="#D32F2F" android:layout_margin="5dp"/>
                <Button android:id="@+id/btnBetBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ČERNÁ" android:backgroundTint="#000000" android:layout_margin="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvResultNumber"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvGameStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>