<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游꿡 Kotlin Quest"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V칤tej, hr치캜i!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Statistiky -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游늵 Tvoje statistiky"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvTotalScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Celkov칠 sk칩re: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvGamesPlayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Odehr치no her: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvCurrentLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level: 1"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tla캜칤tka -->
        <Button
            android:id="@+id/btnStartNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游꿢 Nov치 hra"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4CAF50"/>

        <Button
            android:id="@+id/btnContinueGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="郊윒잺 Pokra캜ovat"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#FF9800"
            android:enabled="false"/>

        <TextView
            android:id="@+id/tvContinueInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="콯치dn치 rozehran치 hra"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游늳 Detailn칤 statistiky"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2196F3"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游뛁 Odhl치sit se"
            android:textSize="16sp"
            android:padding="16dp"
            android:backgroundTint="#F44336"/>

    </LinearLayout>
</ScrollView>