<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Třetí aktivita - Dokončení"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/twThirdInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data z předchozích aktivit."
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

            <EditText
                android:id="@+id/etSalutation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vyplňte oslovení (např. Pan, Paní)"
                android:layout_marginTop="20dp"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Zpět"
                    android:layout_marginEnd="10dp"
                    />

                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Odeslat"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Po odeslání bude aplikace ukončena."
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>